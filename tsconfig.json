{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "src/root.js",
    "src/util.js",
    "src/lib/base.js",
    "src/lib/util.js"
  ],
  "compilerOptions": {
    "outDir": "./.build/",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "es6",
    "allowJs": true,
    "noEmitOnError": true
  }
}
